{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "outDir": "dist",
      "sourceMap": true,
      "skipLibCheck": true,
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*"]
  }
  